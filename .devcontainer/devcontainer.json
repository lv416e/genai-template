{
  "build": {
    "cacheFrom": [
      "type=registry,ref=ghcr.io/lv416e/genai-template-devcontainer:buildcache",
      "type=registry,ref=ghcr.io/lv416e/genai-template-devcontainer:latest"
    ],
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/${localWorkspaceFolderBasename}",
    "TERM": "xterm-256color"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-vscode.vscode-json",
        "tamasfe.even-better-toml",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "github.copilot",
        "github.copilot-chat",
        "ms-vscode.remote-containers",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "wayou.vscode-todo-highlight",
        "gruntfuggly.todo-tree",
        "eamodio.gitlens",
        "ms-vscode.hexeditor"
      ],
      "settings": {
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        },
        "editor.rulers": [
          120
        ],
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 120,
        "files.associations": {
          "*.toml": "toml",
          ".tool-versions": "properties",
          "mise.toml": "toml"
        },
        "mypy-type-checker.args": [
          "--ignore-missing-imports",
          "--follow-imports=silent",
          "--show-column-numbers",
          "--no-pretty"
        ],
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.terminal.activateEnvironment": false,
        "ruff.format.args": [
          "--line-length=120"
        ],
        "ruff.format.enable": true,
        "ruff.lint.args": [
          "--line-length=120"
        ],
        "ruff.lint.enable": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installZsh": true,
      "upgradePackages": false,
      "userGid": "automatic",
      "userUid": "automatic",
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "azureDnsAutoDetection": true,
      "installDockerBuildx": true,
      "moby": true,
      "version": "latest"
    }
  },
  "forwardPorts": [
    3000,
    8000,
    8080,
    5000,
    8888
  ],
  "mounts": [
    "source=vscode-server-extensions,target=/home/vscode/.vscode-server/extensions,type=volume",
    "source=${localWorkspaceFolder}/.devcontainer/scripts,target=/tmp/scripts,type=bind"
  ],
  "name": "Modern Agentic Development Environment (Optimized)",
  "portsAttributes": {
    "3000": {
      "label": "Frontend Dev Server",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "Flask/FastAPI Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Python Dev Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Alternative Web Server",
      "onAutoForward": "notify"
    },
    "8888": {
      "label": "Jupyter Server",
      "onAutoForward": "ignore"
    }
  },
  "postCreateCommand": "bash /tmp/scripts/setup.sh",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.local/bin:/home/vscode/.cargo/bin"
  },
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind"
}
